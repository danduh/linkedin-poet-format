{
  "manifest_version": 3,
  "name": "LN Format",
  "description": "Formatting posts in LinkedIn",
  "version": "1.2",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png",
    "256": "icons/icon_256x256.png",
    "512": "icons/icon_512x512.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "unicoder.js",
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
